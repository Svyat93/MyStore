<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name = "Test Suite" parallel="none">

    <listeners>
        <listener class-name="listeners.TestListener"/>
        <listener class-name="utility.RetryAnalyzer"/>
    </listeners>

    <test name="Test change password - Firefox">
        <parameter name="browser" value="Firefox"/>
        <groups>
            <define name="All">
                <include name="Positive"/>
                <include name="Negative"/>
            </define>
            <run>
                <include name="Negative"/>
            </run>
        </groups>
        <classes>
            <class name="tests.TestChangePassword" />
        </classes>
    </test>

    <test name="Test change password - Chrome">
        <parameter name="browser" value="Chrome"/>
        <groups>
            <define name="All">
                <include name="Positive"/>
                <include name="Negative"/>
            </define>
            <run>
                <include name="Negative"/>
            </run>
        </groups>
        <classes>
            <class name="tests.TestChangePassword" />
        </classes>
    </test>

    <test name="Test change password - Edge">
        <parameter name="browser" value="Edge"/>
        <groups>
            <define name="All">
                <include name="Positive"/>
                <include name="Negative"/>
            </define>
            <run>
                <include name="Negative"/>
            </run>
        </groups>
        <classes>
            <class name="tests.TestChangePassword" />
        </classes>
    </test>



</suite>